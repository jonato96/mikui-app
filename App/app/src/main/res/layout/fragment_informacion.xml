        android:text="Universidad Central del Ecuador\nFacultad de Ingenieria y Ciencias Aplicadas\nIngenieria Informatica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
