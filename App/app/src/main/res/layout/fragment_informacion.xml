        android:scaleType="centerCrop"
        android:src="@drawable/ic_mikuilogo_vector"
        android:tint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
